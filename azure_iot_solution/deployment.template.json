{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "ContosoRegistry": {
                "username": "${CONTAINER_REGISTRY_USERNAME}",
                "password": "${CONTAINER_REGISTRY_PASSWORD}",
                "address": "${CONTAINER_REGISTRY_ADDRESS}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": "{}"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 0,
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"443/tcp\":[{\"HostPort\":\"443\"}],\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}]}}}"
            }
          }
        },
        "modules": {
          "GPTSkills": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 1,
            "settings": {
              "image": "${MODULES.gpt-skills}",
              "createOptions": {
                "ExposedPorts": {
                  "8000/tcp": {}
                },
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "NetworkMode": "host",
                  "Privileged": false,
                  "PortBindings": {
                    "8000/tcp": [
                      {
                        "HostPort": "8000"
                      }
                    ]
                  }
                }
              }
            },
            "env": {
              "AZURE_OPENAI_API_KEY": {
                "value": "${AZURE_OPENAI_API_KEY}"
              },
              "AZURE_OPENAI_ENDPOINT": {
                "value": "${AZURE_OPENAI_ENDPOINT}"
              },
              "AZURE_OPENAI_CHATBOT_MODEL": {
                "value": "${AZURE_OPENAI_CHATBOT_MODEL}"
              },
              "AZURE_OPENAI_API_VERSION": {
                "value": "${AZURE_OPENAI_API_VERSION}"
              },
              "AZURE_BING_SEARCH_API_KEY": {
                "value": "${AZURE_BING_SEARCH_API_KEY}"
              },
              "AZURE_BING_SEARCH_ENDPOINT": {
                "value": "${AZURE_BING_SEARCH_ENDPOINT}"
              },
              "OPEN_WEATHER_MAP_API_KEY": {
                "value": "${OPEN_WEATHER_MAP_API_KEY}"
              }
            }
          },
          "Orchestrator": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 2,
            "settings": {
              "image": "${MODULES.orchestrator}",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "NetworkMode": "host",
                  "Devices":[
                    {
                      "PathOnHost":"/dev/i2c-1",
                      "PathInContainer":"/dev/i2c-1",
                      "CgroupPermissions":"mrw"
                    },
                    {
                      "PathOnHost":"/dev/gpiomem",
                      "PathInContainer":"/dev/gpiomem",
                      "CgroupPermissions":"mrw"
                    },
                    {
                      "PathOnHost":"/dev/snd",
                      "PathInContainer":"/dev/snd",
                      "CgroupPermissions":"mrw"
                    },
                    {
                      "PathOnHost":"/dev/bus/usb",
                      "PathInContainer":"/dev/bus/usb",
                      "CgroupPermissions":"mrw"
                    }
                  ],
                  "Privileged": true
                }
              }
            },
            "env": {
              "AZURE_COGNIOTIVE_SERVICE_KEY": {
                "value": "${AZURE_COGNIOTIVE_SERVICE_KEY}"
              },
              "AZURE_COGNIOTIVE_SERVICE_REGION": {
                "value": "${AZURE_COGNIOTIVE_SERVICE_REGION}"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "gpt_skills_ToIoTHub": "FROM /messages/modules/gpt-skills/outputs/* INTO $upstream",
          "orchestrator_ToIoTHub": "FROM /messages/modules/orchestrator/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
